<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/sort_btn_wrapper2"
        android:layout_width="392dp"
        android:layout_height="108dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appTitletxt"
            android:layout_width="219dp"
            android:layout_height="39dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:text="My Movie Memoir"
            android:textColor="#fff"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sort_btn_wrapper"
        android:layout_marginTop="0dp"
        android:layout_gravity="left"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/welcome"
        android:textColor="#fff"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/firstNameTxt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="sheridan"
        android:layout_marginStart="10dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/current_dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="date"
            android:layout_marginStart="15dp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="331dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp" />

    <ListView
        android:id="@+id/lvHome"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="589dp" />

</LinearLayout>